@model IEnumerable<PineappleSupermarket.Models.Product>

@{
    ViewBag.Title = "Index";
}

<div class="displaybuscar">
    @using (Html.BeginForm("BuscarPorNombre", "Product", FormMethod.Get))
    {
        @Html.TextBox("Nombre", null)

        <input type="submit" value="Traer Por Nombre" />
    }
</div>

<body class="display">
    <p>@Html.ActionLink("New", "Create", "Product")</p>
    @*<p>@Html.Action("_PhotoGallery", "Product")</p>*@

     @*<img width="800" src="@Url.Action("GetImage", "Product")" />*@
    <table>
        <tr>

            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.ProductCategory)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
            <th>@Html.DisplayNameFor(model => model.Picture)</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductCategory)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                <td><img width="50" src="@Url.Action("GetImage", "Product", new { id = item.ProductId })" /></td>
                <td>
                    @Html.ActionLink("Detail", "Detail", new { id = item.ProductId })
                </td>

                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductId })
                </td>

            </tr>
        }
    </table>

</body>